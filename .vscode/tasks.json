
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Svelte Build, Frontend",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}\\frontend"
            }
        },
        {
            "label": "Flask Build, app.py",
            "type": "shell",
            "command": ".venv\\Scripts\\activate.ps1;  python app.py",
            "options": {
                "cwd": "${workspaceFolder}\\backend"
            },
            "group": "build"
        },
        {
            "label": "Svelte Dev, Frontend",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}\\Frontend"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "app.py: Svelte & Flask Build, Frontend",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "Svelte Build, Frontend",
                "Flask Build, app.py"
            ],
            "dependsOrder": "sequence",
        }
    ]
}